{% extends 'base.html.twig' %}

{% block title %}Hello SuperZeroController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h2>Bienvenue sur la liste des nos super zeros : </h2>

    {{dump(superZeros)}}

    {% for superZero in superZeros %}

        <article>
            <h3>{{superZero.superZeroName }}</h3>
            <a href="{{ path('app_super_zero_detail', {'id': superZero.id }) }}">
                <p> Voir profil détaillé</p>
            </a>
            <h4>Alter ego : {{superZero.realName}}</h4>
            <ul>
                <li>Super skill : {{superZero.superSkillName}}</li>
                <li>Description : {{superZero.superSkillDescription}}</li>
                <li>Faiblesse : {{superZero.weakness}}</li>
                <li>Pouvoir niveau : {{superZero.power}}</li>

                {% if superZero.gadget %}
                    <li>Gadget : {{superZero.gadget.name}} </li>
                    <li>Description du gadget : {{superZero.gadget.description}}</li>
                    {% else %}
                    <li>Ce super zéro n'a pase de gadget</li>
                {% endif %}

                
                    {% for mission in superZero.missions %}
                         <li>Mission : {{mission.title}} </li>
                         <li>Description de la mission : {{mission.description}} </li>
                    {% else %}
                        <li> Ce superzéro n'a pas de mission
                    {% endfor %}

               
                    {% for team in superZero.teams %}
                         <li>Équipe : {{team.title}} </li>
                         <li>Description de l'équipe : {{team.description}} </li>
                         {% else %}
                         <li>ce Super zéro n'a pas d'équipe</li>
                    {% endfor %}        

            </ul>
        </article>    
    {% endfor %}
</div>
{% endblock %}
