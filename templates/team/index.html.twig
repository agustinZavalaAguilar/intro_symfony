{% extends 'base.html.twig' %}

{% block title %}Hello TeamController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Rejoingnez la team!!</h1>
    {{ dump(teams)}}

    {% for team in teams %}

        <article>
            <h2>{{team.title}}</h2>
            <ul>
                <li>{{team.description}}</li>
            </ul>
            
                <h3>Super zeros adhérents : </h3>
                <ul>
                {% for superZero in team.superZeros %}
                    <li>{{superZero.superZeroName}}</li>
                    {% else %}
                    <li>Il n'y a pas de super zeros adhérents</li>
                {% endfor %}
                </ul>
        </article>
        
    {% endfor %}
</div>

{% endblock %}
