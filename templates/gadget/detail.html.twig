{% extends 'base.html.twig' %}

{% block title %}Gadget_Detail!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Spécifications du gadget: </h1>
    {{dump(gadget)}}

    <article>
        <h2>{{ gadget.name}}</h2>
        
        <ul>
            <li>Description : {{gadget.description}}</li>
            <li>Intensité : {{gadget.intensity}}</li>
            
                {% for superZero in gadget.superZeros %}
                    <!-- finir cette ligne --> 
                    {% else %}
                    <li>il n'y a pas encore des super zeros utilisant ce gadget. </li                    
                {% endfor %} 
        </ul>    
    </article>
</div>
{% endblock %}
